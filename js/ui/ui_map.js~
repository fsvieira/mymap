function UI_Map(param){
	this.obj = param.obj; 
	
	this.scene = new Scene(); 
	this.div = null; 
	this.canvas_elem = document.createElement("canvas"); 
	this.canvas_elem.setAttribute("class", 'canvas_frame'); 
	this.canvas = this.canvas_elem.getContext("2d");
	
	// TODO, check for map changes: 
	// * grid
	// * map 
	// * layers 
	// 
	// + Add context menu 
	// + actions: add tile, remove tile, drag paint. 
	this.render = function(ctx){
		
		this.div = $("<div class='game_view' />"); 
		
		this.div.append(this.canvas_elem); 
		
		ctx.append(this.div);
		
	}; 
	
}; 




